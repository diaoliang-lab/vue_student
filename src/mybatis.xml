<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- mybatis.xml作用：配置连接数据库的所有需要的环境 ， 必须连接到所有要使用的映射文件。-->  
<configuration>
    <!-- 配置别名：在MyBatis中为一个类取别名，配置别名是为了在对象映射文件中接收参数类型和返回参数类型时使用--> 
	<typeAliases>
		<typeAlias alias="admin" type="com.entity.Admin" /><!-- 管理员表别名为admin 映射类是 com.entity.Admin -->
		<typeAlias alias="clazz" type="com.entity.Clazz" /><!-- 班级表别名为clazz 映射类是 com.entity.Clazz -->
		<typeAlias alias="users" type="com.entity.Users" /><!-- 学生用户表别名为users 映射类是 com.entity.Users -->
		<typeAlias alias="course" type="com.entity.Course" /><!-- 课程表别名为course 映射类是 com.entity.Course -->
		<typeAlias alias="score" type="com.entity.Score" /><!-- 学生成绩表别名为score 映射类是 com.entity.Score -->
		<typeAlias alias="banner" type="com.entity.Banner" /><!-- 网站栏目表别名为banner 映射类是 com.entity.Banner -->
		<typeAlias alias="article" type="com.entity.Article" /><!-- 网站内容表别名为article 映射类是 com.entity.Article -->
		<typeAlias alias="cate" type="com.entity.Cate" /><!-- 工作类型表别名为cate 映射类是 com.entity.Cate -->
		<typeAlias alias="works" type="com.entity.Works" /><!-- 勤工俭学表别名为works 映射类是 com.entity.Works -->
		<typeAlias alias="teacher" type="com.entity.Teacher" />
		<typeAlias alias="teaching_info" type="com.entity.TeachingInfo" />
	</typeAliases>

	<!-- mappers 标签是用来配置需要加载的 SQL 映射配置文件路径 -->
	<mappers>
		<mapper resource="mapper/admin.xml" /> <!-- 管理员映射文件 -->
		<mapper resource="mapper/clazz.xml" /> <!-- 班级映射文件 -->
		<mapper resource="mapper/users.xml" /> <!-- 学生用户映射文件 -->
		<mapper resource="mapper/course.xml" /> <!-- 课程映射文件 -->
		<mapper resource="mapper/score.xml" /> <!-- 学生成绩映射文件 -->
		<mapper resource="mapper/banner.xml" /> <!-- 网站栏目映射文件 -->
		<mapper resource="mapper/article.xml" /> <!-- 网站内容映射文件 -->
		<mapper resource="mapper/cate.xml" /> <!-- 工作类型映射文件 -->
		<mapper resource="mapper/works.xml" /> <!-- 勤工俭学映射文件 -->
		<mapper resource="mapper/teacher.xml" /> <!-- 勤工俭学映射文件 -->
		<mapper resource="mapper/teachingInfo.xml" /> <!-- 勤工俭学映射文件 -->
	</mappers>
</configuration>













































